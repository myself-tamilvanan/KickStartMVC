@page
@model KickStartRazor_Temp.Pages.Categories.DeleteModel

<form class="container" method="post">
	<input asp-for="Category.Id" hidden />
	<div class="border pb-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Edit Category</h2>
			<hr />
		</div>
		<div asp-validation-summary="ModelOnly"></div>
		<div class="mb-3 row p-1">
			<label asp-for="Category.Name" class="p-0"></label>
			<input asp-for="Category.Name" class="form-control" disabled />
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="Category.DisplaOrder" class="p-0"></label>
			<input asp-for="Category.DisplaOrder" type="text" class="form-control" disabled />
		</div>

		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-danger form-control">Delete</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="/Categories/Index" asp-action="Index" class="btn btn-secondary form-control border">
					Back
				</a>
			</div>
		</div>
	</div>
</form>